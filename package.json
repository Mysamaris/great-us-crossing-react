{
  "name": "boiler-room",
  "version": "1.0.0",
  "description": "",
  "author": "Brad Parker <hi@bradparker.com>",
  "license": "ISC",
  "main": "dist/index.html",
  "engines": {
    "node": "5.2.0",
    "npm": "3.3.12"
  },
  "scripts": {
    "build:setup": "rm -rf .dev/* dist/* && mkdir -p dist .dev",
    "build:prod": "npm run build:setup && NODE_ENV=production gulp build",
    "build:staging": "npm run build:setup && NODE_ENV=staging gulp build",
    "dev": "gulp dev",
    "test": "mocha --compilers js:babel-register,css:css-modules-require-hook --recursive source/**/__test__/*-test.js",
    "deploy:staging": "npm run build:staging && gh-pages -d dist"
  },
  "babel": {
    "presets": [
      "stage-0",
      "es2015",
      "react"
    ]
  },
  "dependencies": {
    "react-dom": "^0.14.6"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "ecmaFeatures": {
      "arrowFunctions": true,
      "blockBindings": true,
      "classes": true,
      "destructuring": true,
      "experimentalObjectRestSpread": true,
      "jsx": true,
      "modules": true,
      "objectLiteralComputedProperties": true,
      "objectLiteralShorthandMethods": true,
      "objectLiteralShorthandProperties": true,
      "templateStrings": true
    }
  },
  "devDependencies": {
    "autoprefixer": "^6.2.3",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "babel-register": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "browserify-incremental": "^3.0.1",
    "chai": "^3.4.1",
    "css-modules-require-hook": "^2.1.0",
    "css-modulesify": "^0.16.1",
    "envify": "^3.4.0",
    "express": "^4.13.3",
    "gh-pages": "^0.8.0",
    "gulp": "^3.9.0",
    "gulp-markdown-to-json": "^0.2.1",
    "gulp-rev": "^6.0.1",
    "gulp-rev-replace": "^0.4.3",
    "gulp-util": "^3.0.7",
    "gulp-watch": "^4.3.5",
    "history": "^1.17.0",
    "insert-module-globals": "^7.0.1",
    "isomorphic-fetch": "^2.2.1",
    "jsdom": "^7.2.2",
    "mkdirp": "^0.5.1",
    "mocha": "^2.3.4",
    "mocha-jsdom": "^1.0.0",
    "node-static": "^0.7.7",
    "nodemon": "^1.8.1",
    "postcss-import": "^7.1.3",
    "react": "^0.14.6",
    "react-addons-test-utils": "^0.14.6",
    "react-dom": "^0.14.6",
    "react-redux": "^4.0.6",
    "react-router": "^1.0.3",
    "recursive-readdir": "^1.3.0",
    "redux": "^3.0.5",
    "serve-static": "^1.10.0",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0"
  }
}
