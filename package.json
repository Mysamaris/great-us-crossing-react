{
  "name": "boiler-room",
  "version": "1.0.0",
  "description": "",
  "author": "Brad Parker <hi@bradparker.com>",
  "license": "ISC",
  "main": "dist/index.html",
  "engines": {
    "node": "5.2.0",
    "npm": "3.3.12"
  },
  "scripts": {
    "build:setup": "rm -rf .dev/* dist/* && mkdir -p dist .dev",
    "serve:prod": "static dist",
    "serve:dev": "nodemon -x 'node bin/server' -w source -e css,js",
    "build:prod": "npm run build:setup && gulp build:prod",
    "build:dev": "npm run build:setup && gulp build:dev",
    "watch": "gulp watch",
    "dev": "npm run build:dev && (npm run watch & npm run serve:dev)",
    "test": "mocha --compilers js:babel-register,css:css-modules-require-hook --recursive source/**/__test__/*-test.js",
    "deploy:staging": "git-directory-deploy --directory dist --branch gh-pages"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ]
  },
  "dependencies": {
    "react-dom": "^0.14.6"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "ecmaFeatures": {
      "arrowFunctions": true,
      "blockBindings": true,
      "destructuring": true,
      "jsx": true,
      "modules": true,
      "objectLiteralComputedProperties": true,
      "objectLiteralShorthandMethods": true,
      "objectLiteralShorthandProperties": true,
      "templateStrings": true
    }
  },
  "devDependencies": {
    "autoprefixer": "^6.2.3",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-register": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "browserify-incremental": "^3.0.1",
    "chai": "^3.4.1",
    "connect": "^3.4.0",
    "css-modules-require-hook": "^2.1.0",
    "css-modulesify": "^0.16.1",
    "express": "^4.13.3",
    "git-directory-deploy": "^1.4.0",
    "gulp": "^3.9.0",
    "gulp-batch": "^1.0.5",
    "gulp-copy": "0.0.2",
    "gulp-rev": "^6.0.1",
    "gulp-rev-replace": "^0.4.3",
    "gulp-util": "^3.0.7",
    "gulp-watch": "^4.3.5",
    "history": "^1.17.0",
    "jsdom": "^7.2.2",
    "merge-stream": "^1.0.0",
    "mkdirp": "^0.5.1",
    "mocha": "^2.3.4",
    "mocha-jsdom": "^1.0.0",
    "node-static": "^0.7.7",
    "nodemon": "^1.8.1",
    "postcss-cli": "^2.3.3",
    "postcss-import": "^7.1.3",
    "react": "^0.14.6",
    "react-addons-test-utils": "^0.14.6",
    "react-dom": "^0.14.6",
    "react-router": "^1.0.3",
    "recursive-readdir": "^1.3.0",
    "serve-static": "^1.10.0",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0"
  }
}
